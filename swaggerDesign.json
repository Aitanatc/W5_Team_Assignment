{
    "swagger": "2.0",
    "info": {
        "description": "This is an api server for a portfolio builder website.\n",
        "version": "1.0.0",
        "title": "Portfolio Builder",
        "contact": {
            "email": "testuser@test.com"
        }
    },
    "license": {
        "name": "Apache 2.0",
        "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "schemes": ["http"],
    "paths": {
        "/task": {
            "get": {
                "tags": ["task"],
                "summary": "Get all task data",
                "operationId": "getAll",
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "404": {
                        "description": "Error occurred"
                    }
                }
            },
            "post": {
                "tags": ["task"],
                "summary": "Create new task",
                "description": "This is for when a task is created.",
                "operationId": "createTASK",
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Created task object",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/task"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "successfully created task"
                    },
                    "400": {
                        "description": "Invalid"
                    }
                }
            }
        },
        "/task/{taskName}": {
            "get": {
                "tags": ["task"],
                "summary": "Get task by name",
                "operationId": "getSingle",
                "produces": ["application/json"],
                "parameters": [
                    {
                        "name": "taskName",
                        "in": "path",
                        "description": "The title that needs to be fetched.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid Id supplied"
                    },
                    "404": {
                        "description": "Id not found"
                    }
                }
            },
            "put": {
                "tags": ["task"],
                "summary": "Update task",
                "description": "This is for when a task is updated.",
                "operationId": "updateTASK",
                "produces": ["application/json"],
                "parameters": [
                    {
                        "name": "taskName",
                        "in": "path",
                        "description": "The video that needs to be updated.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Updated task object",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/task"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "successfully updated task"
                    },
                    "400": {
                        "description": "Invalid"
                    }
                }
            },
            "delete": {
                "tags": ["task"],
                "summary": "Remove task by name",
                "operationId": "deleteTASK",
                "produces": ["application/json"],
                "parameters": [
                    {
                        "name": "taskName",
                        "in": "path",
                        "description": "The name that needs to be removed.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid Id supplied"
                    },
                    "404": {
                        "description": "Id not found"
                    }
                }
            }
        }
    },
    "definitions": {
        "task": {
            "type": "object",
            "required": ["taskName",
                "description",
                "reward"],
            "properties": {
                "taskName": {
                    "type": "string"
                },
                "description":{
                    "type": "string"
                },
                "reward":{
                    "type": "number"
                }
            }
        }
    }
}
